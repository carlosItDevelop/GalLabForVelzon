    private async Task ProcessToasts()
    {
        isDisplayingToast = true;

        // Process each toast in the queue
        while (toastQueue.Any())
        {
            var toastMessage = toastQueue.First();
            StateHasChanged(); // Trigger UI update

            // Wait for the duration of the toast
            await Task.Delay(2000);

            // Remove the displayed toast from the queue
            toastQueue.Remove(toastMessage);
            StateHasChanged(); // Trigger UI update

            // Wait for a short delay before showing the next toast
