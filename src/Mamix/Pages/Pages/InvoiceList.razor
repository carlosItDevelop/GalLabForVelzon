        int targetValue2 = 321; // Set your target count value here
        int targetValue3 = 81; // Set your target count value here
        int targetValue4 = 33; // Set your target count value here
        
        int interval = 2; // milliseconds

        // Start a task for each count-up animation
        var task1 = AnimateCountUp(() => Count1, targetValue1, interval, () => Count1++);
        var task2 = AnimateCountUp(() => Count2, targetValue2, interval, () => Count2++);
        var task3 = AnimateCountUp(() => Count3, targetValue3, interval, () => Count3++);
        var task4 = AnimateCountUp(() => Count4, targetValue4, interval, () => Count4++);

        // Wait for all tasks to complete
        await Task.WhenAll(task1, task2, task3);
    }

    private async Task AnimateCountUp(Func<int> getCurrentCount, int targetCount, int interval, Action incrementAction)
    {
        while (getCurrentCount() < targetCount)
        {
            await Task.Delay(interval);
            incrementAction.Invoke();
            StateHasChanged(); // Refresh UI
        }
    }
