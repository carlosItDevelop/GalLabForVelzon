@code {
    
    string imageDataUrl ="../assets/images/faces/9.jpg";

    async Task LoadFile(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file != null && file.ContentType.Contains("image"))
        {
            var buffer = new byte[file.Size];
            await file.OpenReadStream().ReadAsync(buffer);
            var imageBase64 = Convert.ToBase64String(buffer);
            imageDataUrl = $"data:{file.ContentType};base64,{imageBase64}";
        }
        else
        {
            imageDataUrl = "";
            imageDataUrl = "Invalid image selected";
        }
    }

    <!-- Flatpickr JS Start -->
    public Flatpickr? _datetime;
    private FlatpickrBlazor.FlatpickrOptions _flatpickrOptions2 = new FlatpickrBlazor.FlatpickrOptions   
    {
        EnableTime = true,
        DateFormat = "Y-m-d H:i",
    };
    <!-- Flatpickr JS End -->

    protected async Task DeleteCrmContact(CrmContact CrmContact)
    {
        await CrmContactsService.DeleteCrmContact(CrmContact?.ContactId);
        await Task.Delay(1000);
        NavigationManager.NavigateTo("/crm-contacts", forceLoad: false);
    }
    private bool selectAll;
    private void ToggleSelectAll()
    {
        selectAll = !selectAll;
        foreach (var CrmContact in CrmContactsService.GetCrmContact())
        {
            CrmContact.Selected = selectAll;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("window.interop.initializeTooltips");
        }
    }

